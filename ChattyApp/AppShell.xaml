<?xml version="1.0" encoding="UTF-8" ?>
<Shell
    x:Class="ChattyApp.AppShell"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:local="clr-namespace:ChattyApp"
    Shell.FlyoutBehavior="Disabled"
    Title="ChattyApp">

    <TabBar>

        <Tab Title="Control">
            <ShellContent
                Title="Home"
                ContentTemplate="{DataTemplate local:BotControlPage}"
                Route="BotControlPage" />
        </Tab>

        <Tab Title="Help">
            <ShellContent
                Title="Home"
                ContentTemplate="{DataTemplate local:BotPage}"
                Route="BotPage" />
        </Tab>
    </TabBar>
    
</Shell>